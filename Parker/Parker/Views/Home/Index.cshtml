@model Parker.Models.HomeViewModel

<br />

<div class="row">
    <div class="col-md-6">
        @Html.DropDownListFor(model => model.Sensors.First(m => m.IsSelected).Url, Parker.Controllers.HomeController.GetSensorsDropDown(Model.Sensors), new { @id = "sensorselector", @class = "form-control" })
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-6">
            </div>
            <div class="col-md-2">
                <h3>Vacancy: </h3>
            </div>
            <div class="col-md-1">
            </div>
            <div class="col-md-1 alert-success">
                <h3 id="vacant"></h3>
            </div>
            <div class="col-md-1">
                <h3> of </h3>
            </div>
            <div class="col-md-1 alert-info">
                <h3 id="all"></h3>
            </div>
        </div>
    </div>
</div>


<script>
    window.sensorData = @Html.Raw(Json.Encode(ViewBag.Items));
</script>

<br />

<img id="sensorimg" width="70%" class="img-responsive" style="margin: 0 auto;">